<h3 class="mb-5 title"><strong>レシピ一覧</strong></h3>

<div class="box">
  <% @recipes.each do |r| %>
    <%= link_to r do %>
      <div class="box-content">
        <%= image_tag r.image.url, class:"recipe-photo" %>
        <p class="recipe-title"><%= r.title %></p>
        <div class="ingredient-box">
          <% r.ingredients.each do |i| %>
            <span><%= i.name %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>